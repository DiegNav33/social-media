<div id="background"></div>
<div class="container min-vh-100 d-flex justify-content-center align-items-center">
  <div class="d-flex justify-content-center w-100">
    <div class="card deviseCard shadow" style="width: 400px;">
      <div class="card-body p-5">
        <h1 class="card-title text-center d-flex align-items-center justify-content-center">
          <%= image_tag("sharex.svg", alt: "Logo", width: "30", height: "30", class: "logo me-1") %>
          ShareSpace
        </h1>
        <p class="card-title text-center">Sign in to see photos and videos from your friends.</p>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        label: false,
                        required: false,
                        autofocus: true,
                        placeholder: "Email",
                        input_html: { autocomplete: "email", class: "my-4" } %>
            <%= f.input :password,
                        label: false,
                        required: false,
                        placeholder: "Password",
                        input_html: { autocomplete: "current-password", class: "my-4" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <% if flash[:alert] && flash[:alert].include?("Invalid") %>
            <p class="text-danger">Invalid Email or password.</p>
          <% end %>

          <div class="form-actions text-center my-3">
            <%= f.button :submit, "Log in", class: "btn btn-primary btn-lg px-5" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
