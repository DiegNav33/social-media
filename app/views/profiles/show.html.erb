<section id="userInfo">
  <div class="container">
    <div class="row pt-4 justify-content-center">

      <!-- Image de profil et pseudo -->
      <div class="col-12 col-md-6 text-center">
        <div class="roundedCircleContainer rounded-circle mx-auto">
          <%= image_tag(@user.profile_picture.present? ? @user.profile_picture : "diego.jpeg", alt: "Profile Picture", class: "imgProfile") %>
        </div>
        <h1 class="mt-3 mb-0"><%= @user.pseudo.present? ? @user.pseudo : "Salam33" %></h1>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-12 text-end">
        <% if @user == current_user %>
          <%= link_to "Edit Profile", root_path, class:"btn btnProfile btn-outline-secondary px-4 py-2" %>
          <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class:"btn btnProfile btn-outline-danger px-4 py-2" %>
        <% else %>
          <%= link_to "Follow", root_path, class:"btn btnProfile" %>
          <%= link_to "Message", root_path, class:"btn btnProfile" %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section class="mt-5" id="GeneralInfo">
  <div class="containerGeneralInfo py-4">
    <div class="row">
      <!-- Nombre de Posts -->
      <div class="col-4">
        <div class="d-flex align-items-center justify-content-center flex-column">
          <strong><%= @user.posts.count %></strong>
          <p class="mb-0">Posts</p>
        </div>
      </div>

      <!-- Nombre de Followers -->
      <div class="col-4">
        <div class="d-flex align-items-center justify-content-center flex-column">
          <strong><%= @user.followers.count %></strong>
          <p class="mb-0">Followers</p>
        </div>
      </div>

      <!-- Nombre de Followings -->
      <div class="col-4">
        <div class="d-flex align-items-center justify-content-center flex-column">
          <strong><%= @user.followings.count %></strong>
          <p class="mb-0">Followings</p>
        </div>
      </div>

    </div>
  </div>
</section>
