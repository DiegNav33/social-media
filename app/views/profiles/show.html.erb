<section id="userInfo">
  <div class="row pt-4 justify-content-center">
    <div class="col-12 text-center position-relative">
      <div class="roundedCircleContainer rounded-circle mx-auto">
        <%= image_tag(@user.profile_picture.present? ? @user.profile_picture : "diego.jpeg", alt: "Profile Picture", class: "imgProfile") %>
      </div>
      <h1 class="mt-3 mb-0"><%= @user.pseudo.present? ? @user.pseudo : "DiegNav33" %></h1>
      <% if @user == current_user %>
        <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class:"btnProfile signOut position-absolute" do %>
          <i class="bi bi-box-arrow-right"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
  <div class="col-12 text-center mt-3">
    <% if @user == current_user %>
      <%= link_to "Edit Profile", edit_user_registration_path, class:"btn btnProfile btn-secondary btn-lg" %>
    <% else %>
      <%= link_to "Follow", root_path, class:"btn btnProfile btn-secondary" %>
      <%= link_to "Message", root_path, class:"btn btnProfile btn-secondary" %>
    <% end %>
  </div>
  </div>
  <div class="row">
    <div class="col-12 mt-5">
      <div id="fullNameUser">
        <p class="m-0 py-2"><%= @user.first_name%> <%= @user.last_name%></p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 mt-3">
      <div id="bioText">
        <%= simple_format(@user.bio_text) %>
      </div>
    </div>
  </div>

</section>

<section class="mt-5" id="generalInfo">
  <div class="containerGeneralInfo py-4">
    <div class="row">
      <!-- Posts -->
      <div class="col-4">
        <div class="d-flex align-items-center justify-content-center flex-column">
          <strong><%= @user.posts.count %></strong>
          <p class="mb-0">Posts</p>
        </div>
      </div>

      <!-- Followers -->
      <div class="col-4">
        <div class="d-flex align-items-center justify-content-center flex-column">
          <strong><%= @user.followers.count %></strong>
          <p class="mb-0">Followers</p>
        </div>
      </div>

      <!-- Followings -->
      <div class="col-4">
        <div class="d-flex align-items-center justify-content-center flex-column">
          <strong><%= @user.followings.count %></strong>
          <p class="mb-0">Followings</p>
        </div>
      </div>

    </div>
  </div>
</section>

<section id="userPosts" class="mt-4">
  <% if @user.posts.present? %>
    <div class="row g-3">
      <% @user.posts.each do |post| %>
        <div class="col-6 col-md-4 col-lg-3">
          <%= link_to post_path(post) do %>
            <div class="post-thumbnail">
              <%= image_tag post.image, alt: "Post Image", class: "img-fluid" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
  <div class="row">
    <div class="col-12 text-center">
      <p class="noPostMessage">No posts yet.</p>
    </div>
  </div>
  <% end %>
</section>
